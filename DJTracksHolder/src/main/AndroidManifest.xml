<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.djtracksholder.djtracksholder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.djtracksholder.djtracksholder.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.djtracksholder.djtracksholder.BrowseActivity"
            android:label="@string/title_activity_browse"
            android:parentActivityName="com.djtracksholder.djtracksholder.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.djtracksholder.djtracksholder.AlphabetActivity"
            android:label="@string/title_activity_alphabet"
            android:screenOrientation="portrait"
            android:parentActivityName="MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
    </application>

</manifest>
